<h1>文章列表</h1>

<%= link_to "新增文章", new_post_path %>

<table>
  <thead>
    <tr>
      <th>標題</th>
      <th>內文</th>
    </tr>
  </thead>

  <tbody>
  <% @posts.each do |post| %>
    <tr>
      <td><%= link_to post.title, post %></td>
      <td><%= post.content %></td>
      <td><%= link_to "編輯", edit_post_path(post) %></td>
      <td><%= link_to "刪除", post, method: :delete, data: { confirm: "確定要刪除此文章嗎?"} %></td>
    </tr>
  <% end %>
  </tbody>
</table>